<h1>Listing all articles</h1>

<% @articles.each do |article| %>
    <div class="row">
        <div class="col-sm-8 offset-sm-2 title-description">
            <div class="well">
                <div=class="article-title">
                    <%= link_to article.title, article_path(article) %>
                </div>
                <div class="article-body">
                    <td><%= truncate(article.description, length:100) %></td>
                </div>
                <div class="article-actions">
                    <%= link_to "Edit this article", edit_article_path(article), class:"btn btn-xs btn-primary" %>
                    <%= link_to "Destroy article", article_path(article), method: :delete, 
                                        data:{confirm: "Are yousure you want to delete the article?"},
                                        class:"btn btn-xs btn-danger" %>
                    <br>
                    <h6></h6>                                            
                </div>
            </div>
        </div>
    </div>
<% end %>
